<header>
    <h1>
      Artvago
    </h1>
</header>
<nav>
    <a href="/">Paintings</a>
    <a href="/paintings/new">Add Painting</a>
    <a href="/artist/about">About the Artist</a>
    <a href="/artist/edit">Edit Profile</a>
</nav>
<div class="container my-4 d-flex justify-content-center">
    <div class="row row-cols-1 row-cols-md-2 g-4 w-75">
      <% paintings.forEach(painting => { %>
        <div class="col w-35">
          <div class="card">
            <img src="./img/<%= painting.img %>" class="card-img-top"> 
            <div class="card-body">
              <h5 class="card-title"><%= painting.title %></h5>
              <div class="card-subtitle text-muted mb-2"><%= painting.createdAt.toLocaleDateString() %></div>
              <a href="paintings/<%= painting.id %>" class="btn btn-primary">View</a>
              <form action="/paintings/<%= painting.id %>?_method=DELETE" method="POST" class="d-inline">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
</div>
</body>
<script src="code.js"></script>
</html>